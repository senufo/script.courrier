        <description>textarea : mail body</description>
        <posx>180</posx>
        <posy>250</posy>
        <width>1000</width>
        <height>340</height>
        <font>font18</font>
        <textcolor>white</textcolor>
	<!-- <aligny>center</aligny> -->
        <align>left</align>
	<autoscroll time="3000" delay="4000" repeat="5000">True</autoscroll>
        <label>$INFO[Container(120).ListItem.Property(message)]</label>
      </control>


      <!-- Messages List messages                          -->
      <control type="list" id="120">
        <description>Messgaes List</description>
        <posx>180</posx>
        <posy>126</posy>
        <width>1040</width>
	<height>120</height>
	<onleft>1001</onleft>  <!-- control dÃ©finiton -->
        <onright>1004</onright>
	<!-- <onup>1001</onup>
	<ondown>1003</ondown> -->
        <viewtype label="535">list</viewtype>
        <pagecontrol>121</pagecontrol>
        <scrolltime>200</scrolltime>
	<itemlayout height="38"> <!-- items position in the list -->
          <control type="image">
            <posx>0</posx>
            <posy>36</posy>
            <width>1040</width>
            <height>2</height>
            <texture border="10">default-list-nofocus.png</texture>
          </control>

          <control type="label">
            <posx>10</posx> <!-- no selected item position -->
            <posy>0</posy>
            <width>315</width>
            <height>38</height>
            <font>font18</font>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <selectedcolor>green</selectedcolor>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>

          <control type="label">
            <posx>500</posx> <!-- position  2th element no selected -->
            <posy>0</posy>
            <width>680</width>
            <height>38</height>
            <font>font18</font>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <selectedcolor>green</selectedcolor>
            <align>left</align>
            <info>ListItem.Label2</info>
          </control>

        </itemlayout>
        <focusedlayout height="38">
          <control type="image"> <!-- Selected item Image -->
            <posx>0</posx>
            <posy>0</posy>
            <width>490</width>
            <height>38</height>
            <texture border="10">default-list-focus.png</texture>
            <visible>Control.HasFocus(120)</visible>
          </control>

          <control type="label">
            <posx>10</posx>
            <posy>0</posy>
            <width>480</width>
            <height>38</height>
            <font>font19</font>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <selectedcolor>green</selectedcolor>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>

          <control type="label">
            <posx>500</posx>
            <posy>0</posy>
            <width>680</width>
            <height>38</height>
            <font>font18</font>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <selectedcolor>green</selectedcolor>
            <align>left</align>
            <info>ListItem.Property(realname)</info>
	  </control>

        </focusedlayout>
      </control>
      <control type="group">
        <posx>165</posx>
        <posy>126</posy>
        <control type="scrollbar" id="121">
          <description>scroll bar indicator for lists</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>12</width>
          <height>100</height>
          <texturesliderbackground border="6">default-scroll_back.png</texturesliderbackground>
          <texturesliderbar border="6">default-scroll_mid.png</texturesliderbar>
          <texturesliderbarfocus border="6">default-scroll_mid.png</texturesliderbarfocus>
          <textureslidernib>-</textureslidernib>
          <textureslidernibfocus>-</textureslidernibfocus>
          <orientation>vertical</orientation>
          <showonepage>false</showonepage>
          <visible>Control.IsVisible(120)</visible>
        </control>
      </control>

